---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  faviconHref?: string;
}

const {
  title = "sparkify docs",
  description,
  faviconHref = "/favicon.svg"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500;1,600;1,700;1,800&family=JetBrains+Mono:ital,wght@0,400;0,500;0,600;1,400;1,500;1,600&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href={faviconHref} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body>
    <div class="flex antialiased">
      <div class="flex-1 min-w-0 max-w-[1500px] mx-auto w-full">
        <slot />
      </div>
    </div>
    <script>
      import "../scripts/mermaid-runtime.ts";
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overscroll-behavior-y: none;
  }

  ::view-transition-old(*),
  ::view-transition-new(*),
  ::view-transition-group(*) {
    animation-duration: 0s !important;
  }
</style>
