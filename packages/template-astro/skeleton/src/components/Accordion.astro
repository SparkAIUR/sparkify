---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<details class="sf-accordion">
  <summary>{title ?? "Details"}</summary>
  <div class="sf-accordion-content">
    <slot />
  </div>
</details>

<style>
  .sf-accordion {
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    background: #fff;
    padding: 0.25rem 0.75rem;
  }

  .sf-accordion + .sf-accordion {
    margin-top: 0.65rem;
  }

  .sf-accordion summary {
    cursor: pointer;
    padding: 0.65rem 0;
    font-weight: 600;
  }

  .sf-accordion-content {
    padding: 0.25rem 0 0.85rem;
  }
</style>
