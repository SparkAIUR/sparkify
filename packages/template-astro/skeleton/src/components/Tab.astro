---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<section class="sf-tab-panel">
  {title ? <h4>{title}</h4> : null}
  <slot />
</section>

<style>
  .sf-tab-panel + .sf-tab-panel {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px dashed #d1d5db;
  }

  .sf-tab-panel h4 {
    margin: 0 0 0.5rem;
  }
</style>
