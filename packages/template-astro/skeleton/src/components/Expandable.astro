---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<details class="sf-expandable">
  <summary>{title ?? "Details"}</summary>
  <div class="sf-expandable-content"><slot /></div>
</details>

<style>
  .sf-expandable {
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    background: #fff;
    padding: 0.3rem 0.7rem;
    margin: 0.7rem 0;
  }

  .sf-expandable summary {
    cursor: pointer;
    font-weight: 600;
    padding: 0.5rem 0;
  }

  .sf-expandable-content {
    padding: 0.25rem 0 0.65rem;
  }
</style>
